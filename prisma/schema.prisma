// Prisma docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model Flashcard {
  id              Int               @id @default(autoincrement())
  front           String            // The front side of the flashcard
  back            String            // The back side of the flashcard
  understanding   String @default("NOT_UNDERSTOOD") // The status of understanding
  @@map("flashcards")
}